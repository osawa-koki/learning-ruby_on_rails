<h1>投稿一覧</h1>
<table class="table">
  <tr>
    <th>ユーザ名</th>
    <th>本文</th>
    <th>投稿日時</th>
    <th>更新日時</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to("編集", "/posts/edit/#{post.id}", {class: "btn btn-outline-success"}) %></td>
        <td><%= link_to("削除", "/posts/delete/#{post.id}", {class: "btn btn-outline-danger"}) %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
